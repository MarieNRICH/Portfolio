{% extends 'base.html.twig' %}

{% block title %}Sites index{% endblock %}

{% block body %}
    <h1>Sites index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tech</th>
                <th>Content</th>
                <th>Link</th>
                <th>Title</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td>{{ site.id }}</td>
                <td>{{ site.tech }}</td>
                <td>{{ site.content }}</td>
                <td>{{ site.link }}</td>
                <td>{{ site.title }}</td>
                <td><img src="{{ asset('uploads/images/' ~ site.img) }}" width="100"></td>
                <td>
                    <a href="{{ path('app_sites_show', {'id': site.id}) }}">show</a>
                    <a href="{{ path('app_sites_edit', {'id': site.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sites_new') }}">Create new</a>
{% endblock %}
