{% extends 'base.html.twig' %}

{% block title %}Sites{% endblock %}

{% block body %}
    <h1>Sites</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>Tech</th>
                <td>{{ site.tech }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ site.content }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ site.link }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ site.title }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td><img src="{{ asset('uploads/images/' ~ site.img) }}" width="100"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sites_index') }}">back to list</a>

    <a href="{{ path('app_sites_edit', {'id': site.id}) }}">edit</a>

    {{ include('sites/_delete_form.html.twig') }}
{% endblock %}
