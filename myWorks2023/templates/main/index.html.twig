{% extends 'base.html.twig' %}

{% block title %}Mary's Portfolio ;p !
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello Portfolio! âœ…</h1>

		<table class="table">
			<tbody>
				{% for site in sites %}
					<tr>
						<td><a href="{{ path('app_sites_show', {'id': site.id}) }}">{{ site.title }}</a></td>
						<td><img src="{{ asset('uploads/images/' ~ site.img) }}" width="100"></td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
