{% extends 'base.html.twig' %}

{% block title %}Experiences{% endblock %}

{% block body %}
    <h1>Experiences</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ experience.id }}</td>
            </tr>
            <tr>
                <th>Job_title</th>
                <td>{{ experience.jobTitle }}</td>
            </tr>
            <tr>
                <th>Companies</th>
                <td>{{ experience.companies }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ experience.startDate ? experience.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ experience.endDate ? experience.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Activities</th>
                <td>{{ experience.activities }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ experience.country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_experiences_index') }}">back to list</a>

    <a href="{{ path('app_experiences_edit', {'id': experience.id}) }}">edit</a>

    {{ include('experiences/_delete_form.html.twig') }}
{% endblock %}
